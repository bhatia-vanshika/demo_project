<div class="container-xxl my-md-4 bd-layout">
  <aside class="bd-sidebar">
  </aside>
  <main class="bd-main order-1">
    <div class="bd-content ps-lg-4">
      <h2 id="overview">Posts</h2>
      <p id="notice"><%= notice %></p>
      <div class="bd-example">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Body</th>
              <th scope="col" colspan="3">Link</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.body %></td>
                <td><%= link_to 'Show', admins_post_path(post) %></td>
        <td><%= link_to 'Edit', edit_admins_post_path(post) %></td>
        <td><%= link_to 'Destroy', admins_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            
          </tbody>
        </table>
      </div>
    </div>
  </br>
<%= link_to 'New Post', new_admins_post_path %>
  </main>
</div>