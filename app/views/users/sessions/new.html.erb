<div class="container-xxl my-md-4 bd-layout">
  <aside class="bd-sidebar">
  </aside>
  <main class="bd-main order-1">
    <div class="bd-content ps-lg-4">      
      <h2 id="forms">Log In</h2>
      <p id="notice"><%= notice %> </p>
      <div class="bd-example">   
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "row g-3") do |f| %>

          <div class="col-md-6">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",required: true %>
          </div>

          <div class="col-md-6">
            <%= f.label :password, class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control",required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="col-12">
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label"  %>
              </div>
            </div>
          <% end %>
          <div class="col-12">
            <%= f.submit "Sign in", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <%= render "users/shared/links" %>
  </main>
</div>
